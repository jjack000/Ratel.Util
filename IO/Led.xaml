<UserControl x:Class="Ratel.Util.Led"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Ratel.Util"
             mc:Ignorable="d" 
             d:DesignHeight="50" d:DesignWidth="50">
    <Ellipse Stroke="Black" StrokeThickness="2">
        <Ellipse.Fill>
            <RadialGradientBrush x:Name="ledColor" GradientOrigin="0.7,0.3" Center="0.5,0.5">
                <GradientStop x:Name="startColor" Color="White" Offset="0" />
                <GradientStop x:Name="stopColor" Color="Green" Offset="1" />
            </RadialGradientBrush>
        </Ellipse.Fill>
        <Ellipse.Effect>
            <DropShadowEffect Color="Black" BlurRadius="15" ShadowDepth="2" Opacity="0.6" />
        </Ellipse.Effect>
    </Ellipse>
</UserControl>
